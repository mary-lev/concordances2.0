{{extend 'layout.html'}}

{{=DIV(_id="pieChart")}}
{{=all_colours}} / {{=all}}
<h3>Цвета по авторам:</h3>
{{for one in authors:}}
{{=A(one.name, " ", one.family, _href=URL('author', args=one.id))}}
{{pass}}

<h3>Сравнить поэтические сборники:</h3>
