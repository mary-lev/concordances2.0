<h4>
    Схема по месяцам: </h4>
{{for one in authors:}}
{{=A(one.name, " ", one.family, _href=URL('month', args=one.id))}}
{{pass}}

<h4>
Схема по временам года:</h4>
{{for one in authors:}}
{{=A(one.name, " ", one.family, _href=URL('seasons', args=one.id))}}
{{pass}}

{{block right_sidebar}}
{{=A(T("Админка"), _href=URL('admin','default','index', scheme='https'), _class='btn',
