{{extend 'layout.html'}}
<h1>
    {{=texts.title}}
</h1>
<h2>
   {{=texts.author.name}} {{=texts.author.family}}
</h2>
{{for line in content:}}
{{=line}}<br>
{{pass}}
{{=texts.day_writing}} {{=texts.month_writing}} {{=texts.year_writing}}

<ol>
{{for all in content:}}
<li>{{for word in all[0].split():}}
    {{if word == all[0].split()[7]:}}
        <span style="color:blue; font-weight: bold">{{=word}}</span>
{{else:}}
{{=word}} {{pass}} {{pass}}
    ({{=A(all[1], " ", all[2][0], " ", all[2][1], _href=URL("show", "show1", args=all[3]))}}) </li>
{{pass}}
</ol>
