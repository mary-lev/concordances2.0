{{extend 'layout.html'}}
<h1>Текст с вариантами</h1>
<h2>{{=text.author.name}} {{=text.author.family}}. {{=text.title}}</h2>

<form>
<input type="button" onclick="fade('test',-0.2);fade('that',+0.2)" value={{=text.book}}/>
<input type="button" onclick="fade('test',+0.2);fade('that',-0.2)" value={{=var[1].comment_book}}/>
</form>

{{for all in content:}}
{{if str(content.index(all)) in lines:}}
  <div style="color:blue" id="test">{{=words[0]}}</div>
<div style="color:blue" id = "that"> {{=all}}</div></font-color>
{{else:}}
{{=all}}<br>
{{pass}}
    {{pass}}

{{=var}}
