{{extend 'layout.html'}}
<h1>Текст с вариантами</h1>
<h2>{{=text.author.name}} {{=text.author.family}}. {{=text.title}}</h2>

<form>
<input type="button" onclick="fade('test',-0.2);fade('that',+0.2)" value={{=text.book}}/>
<input type="button" onclick="fade('test',+0.2);fade('that',-0.2)" value={{=var[0].comment_book}}/>
</form>

{{for all in content:}}
{{if str(content.index(all)+1) in lines:}}
    <div style="color:blue" id="test">{{=words[lines.index(str(content.index(all)+1))]}}</div>
    <div style="color:blue" id="that"> {{=all}} {{=content.index(all)}}</div></font-color>
{{else:}}
    {{=all}}, {{=content.index(all)}}<br>
{{pass}}
{{pass}}

{{=var}}

lines
{{=lines}}

words
{{=words}}
