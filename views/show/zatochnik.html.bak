{{extend 'layout.html'}}
<h1>Слово Даниила Заточника</h1>
<h3>Сравнение со списком: {{=text.title}}</h3>

<table>
    {{for all in table:}}
    {{result1=[]}}
    {{result2 = []}}
    <th>{{=all[0][0]}} {{=all[0][1]}}</th> {{pass}}
     <tr>{{for all in counts:}} <td><b>Совпадение</b>: {{=all[0]}} ({{=all[3]}}%),<br> нет в {{=text.title}}: {{=all[1]}},<br> есть только в {{=text.title}}: {{=all[2]}} </td> {{pass}}</tr>
        {{for x in range(0, 786):}}
            <tr> {{for a in range(len(table)):}}
                <td>
                    {{for aa in table[a][x]:}}
                        {{if aa.startswith('?'):}}

                        {{elif aa.startswith('+'):}}
                            <strike>{{=aa[2:]}}</strike> {{if '.' not in aa and ',' not in aa: }} {{result1.append(aa)}} {{pass}}
                        {{elif aa.startswith('-'):}}
                            <i>{{=aa[2:]}}</i> {{if '.' not in aa and ',' not in aa: }}  {{result2.append(aa)}} {{pass}}
                        {{else:}}
                            {{=aa}}
                        {{pass}}
                    {{pass}}
               </td>  {{pass}}
        </tr>
    {{pass}}
   
</table>

<table>
    <tr><td>{{for l in table[6]:}} {{=' '.join(l)}}<br> {{pass}}</td> <td> {{for t in table[5]:}} {{=' '.join(t)}} <br>{{pass}}</td> </tr>
</table>
