{{extend 'layout.html'}}
<h1>Контекст слова {{=I(request.vars.word)}}</h1>
<ul>
{{for all in strings:}}
<li>{{=all[0]}} ({{=A(all[1], _href=URL("show", "show1", args=all[3]))}}, {{=all[2][0]}} {{=all[2][1]}}) </li>
{{pass}}
</ul>


<ol>
{{for all in strings:}}
<li>{{for word in all[0].split():}}
    {{if word == all[0].split()[7]:}}
        <span style="color:blue; font-weight: bold">{{=word}}</span>
{{else:}}
{{=word}} {{pass}} {{pass}}
    ({{=A(all[1], " ", all[2][0], " ", all[2][1], _href=URL("show", "show1", args=all[3]))}}) </li>
{{pass}}
</ol>
